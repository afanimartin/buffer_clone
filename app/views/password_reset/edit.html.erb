<h1>Reset password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
    <% if form.object.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <ul>
                    <li><%= message %></li>
                </ul>
            <% end %>
        </div>
    <% end %> 

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control", placeholder: "password" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class:"form-control", placeholder: "confirm password" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Reset Password", class:"btn btn-primary" %>
    </div> 
<% end %>